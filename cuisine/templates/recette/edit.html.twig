{% extends "base.html.twig" %}

{% block title %}
	Edition de
	{{ recette.nom }}
{% endblock %}

{% block body %}
	<h1>Editer la recette
		{{ recette.nom }}</h1>

	{{ form_start(formView) }}

	{{ form_errors(formView) }}

	<div class="row">
		<div class="col">
			{{ form_row(formView.nom) }}
			{{ form_row(formView.duree) }}
			{{ form_row(formView.difficulte) }}
			{{ form_row(formView.prix) }}
		</div>
	</div>

	{{ form_widget(formView) }}

	<button type="submit" class="btn btn-primary">
		<i class="fas fa-save"></i>
		Cr√©er la recette
	</button>

	{{ form_end(formView) }}

{% endblock %}
